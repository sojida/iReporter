{
  "name": "ireporter",
  "version": "1.0.0",
  "description": "An anti-corruption movement",
  "main": "app.js",
  "scripts": {
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel -d ./build ./server -s",
    "build": "npm run clean && npm run build-babel",
    "start-build": "npm run build && node ./build/app.js",
    "start": "npm run start-build && node /build/app.js",
    "dev": "nodemon /server/app.js --exec babel-watch",
    "test": "mocha --require babel-register ./test/*.test.js --exit",
    "coverage": "nyc --reporter=html --reporter=text --reporter=lcov mocha --reporter spec --require babel-register ./test/*.js --exit",
    "coveralls": "npm run coverage -- --report lcovonly && cat coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sojida/iReporter.git"
  },
  "keywords": [
    "anti-corruption"
  ],
  "author": "Adesoji Daniel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sojida/iReporter/issues"
  },
  "homepage": "https://github.com/sojida/iReporter#readme",
  "dependencies": {
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "express": "^4.16.4",
    "joi": "^14.3.0",
    "mocha": "^5.2.0",
    "babel-cli": "^6.26.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-watch": "^2.0.7",
    "coveralls": "^3.0.2",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "nyc": "^13.1.0"
  }
}
